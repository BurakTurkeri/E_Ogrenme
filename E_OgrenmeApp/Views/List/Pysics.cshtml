
@using System.Web.Optimization
@model List<E_OgrenmeApp.Models.Dersler>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Math</title>
    @Styles.Render("~/Admin/styles")
</head>
<body>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Ders Konusu
                </th>
                <th>
                    Site
                </th>
                <th>
                    Pdf
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                if (item.Ders_Adı == "Fizik")
                {
                    <tr>
                        <td>
                            @item.Ders_Konu
                        </td>
                        <td>
                            <a href="@item.Link">Ders Video</a>
                        </td>
                        <td>
                            <a href="@item.Pdf">Pdf</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @Styles.Render("~/Admin/styles")
</body>
</html>
