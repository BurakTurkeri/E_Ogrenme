@using System.Web.Optimization

@model E_OgrenmeApp.Areas.ViewModels.AnasayfaNew
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body {
            background-color: white;
            color: black;
        }
    </style>

</head>
<body>
    <h2>Ders Ekleme Paneli</h2>
    @using (Html.BeginForm())
    {
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.ValidationSummary()
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(x => x.DersAdı)
                        @Html.TextBoxFor(x => x.DersAdı, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.DersKonu)
                        @Html.TextBoxFor(x => x.DersKonu, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Link)
                        @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Pdf)
                        @Html.TextBoxFor(x => x.Pdf, new { @class = "form-control" })
                    </div>
                    <br />
                    <input type="submit" value="Ekle" style="width:150px; padding:10px; padding-top:5px;  font-weight:bold;  " class="btn btn-primary" />
                </div>
            </div>
        </div>
        </div>
        }
        @section Scripts{
            @Scripts.Render("~/ders/ders/scripts")
        }
</body>
</html>
